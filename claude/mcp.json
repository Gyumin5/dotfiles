{
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"]
    },
    "sequential-thinking": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"]
    },
    "arxiv-latex": {
      "command": "uv",
      "args": [
        "--directory",
        "~/.local/share/mcp/arxiv-latex-mcp",
        "run",
        "server/main.py"
      ]
    },
    "academic-search": {
      "command": "uv",
      "args": [
        "--directory",
        "~/.local/share/mcp/academic-search-mcp",
        "run",
        "server.py"
      ]
    },
    "gemini-cli": {
      "command": "npx",
      "args": ["-y", "gemini-mcp-tool"]
    }
  }
}
