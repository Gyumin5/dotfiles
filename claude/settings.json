      "Bash(gh *)",
      "Bash(ssh *)",
      "Bash(ssh-keygen *)",
      "Bash(scp *)",
      "Bash(ls *)",
      "Bash(ls)",
      "Bash(pwd)",
      "Bash(which *)",
      "Bash(echo *)",
      "Bash(cat *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(wc *)",
      "Bash(sort *)",
      "Bash(uniq *)",
      "Bash(diff *)",
      "Bash(mkdir *)",
      "Bash(cp *)",
      "Bash(mv *)",
      "Bash(chmod *)",
      "Bash(find *)",
      "Bash(grep *)",
      "Bash(rg *)",
      "Bash(sed *)",
      "Bash(awk *)",
      "Bash(curl *)",
      "Bash(wget *)",
      "Bash(python*)",
      "Bash(pip *)",
      "Bash(node *)",
      "Bash(npm *)",
      "Bash(npx *)",
      "Bash(yarn *)",
      "Bash(pnpm *)",
      "Bash(bun *)",
      "Bash(cargo *)",
      "Bash(go *)",
      "Bash(make *)",
      "Bash(make)",
      "Bash(docker *)",
      "Bash(docker-compose *)",
      "Bash(kubectl *)",
      "Bash(terraform *)",
      "Bash(jq *)",
      "Bash(xargs *)",
      "Bash(tee *)",
      "Bash(touch *)",
      "Bash(date *)",
      "Bash(env *)",
      "Bash(export *)",
      "Bash(source *)",
      "Bash(cd *)",
      "Bash(gemini-ask*)",
      "Bash(gemini *)",
      "Bash(*/gemini *)",
      "Bash(*/gemini-ask*)",
      "Bash(*/install.sh*)",
      "Read",
      "Write",
      "Edit",
      "Glob",
      "Grep",
      "WebFetch",
      "WebSearch",
      "NotebookEdit"
    ],
    "deny": [
      "Read(**/.env*)",
      "Read(**/*.pem)",
      "Read(**/*.key)",
      "Read(**/.ssh/**)",
      "Read(**/.aws/**)",
      "Read(**/credentials*)",
      "Write(**/.env*)",
      "Write(**/*.pem)",
      "Write(**/*.key)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/block-dangerous.sh"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/block-main-push.sh"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "pyright-lsp@claude-plugins-official": true
  }
}
